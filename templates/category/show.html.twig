{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>Category</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ category.name }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex justify-content-center mt-3">
		<a class="btn bg-dark text-white mb-3 ms-3" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
	</div>
	<div class="d-flex justify-content-center mt-3">
		<a class="btn bg-dark text-white mb-3 ms-3" href="{{ path('app_category_index') }}">Back to list</a>
	</div>
{% endblock %}
