<div class="d-flex justify-content-center">
	{{ form_start(form,{'attr': {'class': 'd-flex flex-column mb-3 mt-4'}}) }}
	{{ form_row(form.name,{'attr': {'class': 'd-flex flex-column mb-3 mt-1'}}) }}
	{{ form_widget(form,{'attr': {'class': 'd-flex flex-column mb-3'}}) }}
	<div class="d-flex justify-content-center">
		<button class="btn bg-dark text-white ms-4">{{ button_label|default('Save') }}</button>
	</div>
	{{form_end(form)}}
</div>
